  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ],
      "no-console": "off",
      "dot-notation": "off",
      "array-callback-return": "off",
      "arrow-parens": "off",
      "consistent-return": "off",
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ],
      "no-underscore-dangle": "off",
      "max-len": [
        "error",
        {
          "code": 240
        }
      ],
      "func-names": "off",
      "prefer-promise-reject-errors": "off"
    }
  }
